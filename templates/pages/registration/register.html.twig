{% extends 'base.html.twig' %}

{% block title %}Inscription | AMANI{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {#
    <link href="{{ asset('medel_website_assets/css/plugins/iCheck/custom.css') }}" rel="stylesheet">
    <link href="{{ asset('medel_website_assets/css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css') }}" rel="stylesheet">
    #}
{% endblock %}

{% block body %}
<section class="mkombe-gray-section">
    <div class="container">
        <div class="row" style="margin-top: -50px;">
            {#<div class="card-body" style="padding: 25px;">#}
            <div class="col-md-12" style="border: solid 1px #FD0; border-radius: 5px; padding: 25px;">
                <div class="ibox">
                    <div class="ibox-content b-r-md">
                        <div class="row">
                            <div class="col-sm-6 b-r">
                                <h1 class="m-t-none m-b">Pas encore de compte?</h1>
                                {% for flash_error in app.flashes('verify_email_error') %}
                                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                                {% endfor %}
                                <p class="m-b-lg">je m'inscris.</p>
                                {{ form_start(form) }}
                                    <div class="form-group {% if form_errors(form.username) %}has-error{% endif %}">
                                        <label>N° Tel</label>
                                        {{ form_row(form.username, {
                                            "attr" : {
                                                'class' : 'form-control p-lg b-r-md'
                                            },
                                            'label' : false
                                        }) }}
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        {{ form_row(form.email, {
                                            "attr" : {
                                                'class' : 'form-control p-lg b-r-md'
                                            },
                                            'label' : false
                                        }) }}
                                    </div>
                                    <div class="form-group">
                                        <label>Mot de passe</label>
                                        {{ form_row(form.plainPassword.first, {
                                            "attr" : {
                                                'class' : 'form-control p-lg b-r-md'
                                            },
                                            'label' : false
                                        }) }}
                                    </div>
                                    <div class="form-group">
                                        <label>Confirmer le mot de passe</label>
                                        {{ form_row(form.plainPassword.second, {
                                            "attr" : {
                                                'class' : 'form-control p-lg b-r-md'
                                            },
                                            'label' : false
                                        }) }}
                                    </div>

                                    <div>
                                       {# <button type="submit" class="btn">Valider</button>#}
                                        <button class="btn btn-warning btn-block" type="submit">
                                            <strong class="text-gray-dark">je m'inscris</strong>
                                        </button>
                                        {#<label> <input type="checkbox" class="i-checks"> Remember me </label>#}
                                    </div>
                                {{ form_end(form) }}
                            </div>
                            <div class="col-sm-6"><h1>Vous avez déjà un compte?</h1>
                                <p>Je me connecte</p>
                                <p class="text-center" style="font-size: 150px; color: red">
                                    <a href="{{ path('auth_login') }}" >
                                        <i class="icon-et-key" ></i>
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}


