{% extends 'base.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block body %}
    <h1>Patient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomprenom</th>
                <th>DateNaissanceAt</th>
                <th>Sexe</th>
                <th>Domicile</th>
                <th>Tel</th>
                <th>Profession</th>
                <th>NumeroIdentification</th>
                <th>CreatedAt</th>
                <th>Observations</th>
                <th>Etatcivil</th>
                <th>Situationmaritale</th>
                <th>Telfix</th>
                <th>Fonction</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.nomprenom }}</td>
                <td>{{ patient.dateNaissanceAt ? patient.dateNaissanceAt|date('Y-m-d') : '' }}</td>
                <td>{{ patient.sexe }}</td>
                <td>{{ patient.domicile }}</td>
                <td>{{ patient.tel }}</td>
                <td>{{ patient.profession }}</td>
                <td>{{ patient.numeroIdentification }}</td>
                <td>{{ patient.createdAt ? patient.createdAt|date('Y-m-d') : '' }}</td>
                <td>{{ patient.observations }}</td>
                <td>{{ patient.etatcivil }}</td>
                <td>{{ patient.situationmaritale }}</td>
                <td>{{ patient.telfix }}</td>
                <td>{{ patient.fonction }}</td>
                <td>
                    <a href="{{ path('app_patient_show', {'id': patient.id}) }}">show</a>
                    <a href="{{ path('app_patient_edit', {'id': patient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_patient_new') }}">Create new</a>
{% endblock %}
