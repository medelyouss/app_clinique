{% extends 'base.html.twig' %}

{% block title %}New Patient{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h1>Ajouter un patient</h1>
                </div>

                <div class="panel-body">
                    {{ form_start(form) }}
                    <div class="form-group col-sm-6 {% if form_errors(form.nomprenom) %}has-error{% endif %}">
                        <label>Nom Prénom <span class="text-danger">*</span></label>
                        {{ form_widget(form.nomprenom, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : "Nom prénom"
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.nomprenom) }}</small>
                        </div>
                    </div>

                    <div class="form-group col-sm-3 {% if form_errors(form.numeroIdentification) %}has-error{% endif %}">
                        <label>Num identification <span class="text-danger">*</span></label>
                        {{ form_widget(form.numeroIdentification, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : "N° Identification"
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.numeroIdentification) }}</small>
                        </div>
                    </div>

                    <div class="form-group col-sm-3 {% if form_errors(form.dateNaissanceAt) %}has-error{% endif %}">
                        <label>Date naissance <span class="text-danger">*</span></label>
                        {{ form_widget(form.dateNaissanceAt, {
                            'attr' : {
                                'class' : 'form-control'
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.dateNaissanceAt) }}</small>
                        </div>
                    </div>

                    <div class="form-group col-sm-3 {% if form_errors(form.sexe) %}has-error{% endif %}">
                        <label>Sexe <span class="text-muted">*</span></label>
                        {{ form_widget(form.sexe, {
                            'attr' : {
                                'class' : 'form-control'
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.sexe) }}</small>
                        </div>
                    </div>

                    <div class="form-group col-sm-3 {% if form_errors(form.situationmaritale) %}has-error{% endif %}">
                        <label>Situation maritale <span class="text-muted">*</span></label>
                        {{ form_widget(form.situationmaritale, {
                            'attr' : {
                                'class' : 'form-control'
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.situationmaritale) }}</small>
                        </div>
                    </div>
                    <div class="form-group col-sm-6 {% if form_errors(form.profession) %}has-error{% endif %}">
                        <label>Profession <span class="text-muted">*</span></label>
                        {{ form_widget(form.profession, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : "Profession"
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.profession) }}</small>
                        </div>
                    </div>

                    <div class="form-group col-sm-3 {% if form_errors(form.tel) %}has-error{% endif %}">
                        <label>Tel <span class="text-danger">*</span></label>
                        {{ form_widget(form.tel, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : "N° Tel 1"
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.tel) }}</small>
                        </div>
                    </div>
                    <div class="form-group col-sm-3 {% if form_errors(form.tel2) %}has-error{% endif %}">
                        <label>Tel (2ème) <span class="text-muted">*</span></label>
                        {{ form_widget(form.tel2, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : "N° Tel 2"
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.tel2) }}</small>
                        </div>
                    </div>

                    <div class="form-group col-sm-6 {% if form_errors(form.domicile) %}has-error{% endif %}">
                        <label>Adresse <span class="text-muted">*</span></label>
                        {{ form_widget(form.domicile, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : "Adresse de domicile"
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.domicile) }}</small>
                        </div>
                    </div>

                    <div class="form-group col-sm-12 {% if form_errors(form.observations) %}has-error{% endif %}">
                        <label>Observations <span class="text-muted">*</span></label>
                        {{ form_widget(form.observations, {
                            'attr' : {
                                'class' : 'form-control'
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.observations) }}</small>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-info waves-effect waves-light"><i class="fa fa-save"></i> Enregistrer</button>
                        <a href="{{ path("app_patient_index") }}" type="button"
                           class="btn btn-default waves-effect waves-light pull-right">Annuler</a>
                    </div>
                    {{ form_end(form) }}

                    <div class="col-md-12">
                        <a href="{{ path('app_patient_index') }}" class="btn btn-xs btn-primary m-t-lg"><< Retour</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
