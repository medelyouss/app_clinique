<form method="post" action="{{ path('app_patient_delete', {'id': patient.id}) }}"
      onsubmit="return confirm('Supprimer le patient? Action irreversible!! Continuez?');" style="display: inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ patient.id) }}">
    <button class="btn btn-danger btn-xs btn-circle btn-outline"><i class="fa fa-trash"></i> </button>
</form>
