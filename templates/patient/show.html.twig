{% extends 'base.html.twig' %}

{% block title %}Patient{% endblock %}

{% block body %}
    <h1>Patient</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ patient.id }}</td>
            </tr>
            <tr>
                <th>Nomprenom</th>
                <td>{{ patient.nomprenom }}</td>
            </tr>
            <tr>
                <th>DateNaissanceAt</th>
                <td>{{ patient.dateNaissanceAt ? patient.dateNaissanceAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ patient.sexe }}</td>
            </tr>
            <tr>
                <th>Domicile</th>
                <td>{{ patient.domicile }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ patient.tel }}</td>
            </tr>
            <tr>
                <th>Profession</th>
                <td>{{ patient.profession }}</td>
            </tr>
            <tr>
                <th>NumeroIdentification</th>
                <td>{{ patient.numeroIdentification }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ patient.createdAt ? patient.createdAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Observations</th>
                <td>{{ patient.observations }}</td>
            </tr>
            <tr>
                <th>Situationmaritale</th>
                <td>{{ patient.situationmaritale }}</td>
            </tr>
            <tr>
                <th>Tel N2</th>
                <td>{{ patient.tel2 }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_patient_index') }}">back to list</a>

    <a href="{{ path('app_patient_edit', {'id': patient.id}) }}">edit</a>

    {{ include('patient/_delete_form.html.twig') }}
{% endblock %}
