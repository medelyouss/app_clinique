{% extends 'admin/base.html.twig' %}

{% block title %}Ajouter administrateur | AMANI{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {#
    <link href="{{ asset('medel_website_assets/css/plugins/iCheck/custom.css') }}" rel="stylesheet">
    <link href="{{ asset('medel_website_assets/css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css') }}" rel="stylesheet">
    #}
{% endblock %}

{% block body %}
<section class="mkombe-gray-section">
    <div class="container">
        <div class="row" style="margin-top: -50px;">
            {#<div class="card-body" style="padding: 25px;">#}
            <div class="col-md-12" style="border: solid 1px #FD0; border-radius: 5px; padding: 25px;">
                <div class="ibox">
                    <div class="ibox-content b-r-md">
                        <div class="row">
                            <div class="col-sm-8 b-r">
                                <h1 class="m-t-none m-b">Enregistrer un administrateur</h1>
                                {% for flash_error in app.flashes('verify_email_error') %}
                                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                                {% endfor %}
                                {{ form_start(form) }}
                                <div class="form-group {% if form_errors(form.roles) %}has-error{% endif %}">
                                    <label>Niveau d'accès <span class="text-danger">*</span></label>
                                    {{ form_row(form.roles, {
                                        "attr" : {
                                            'class' : 'form-control b-r-md'
                                        }
                                    }) }}
                                </div>
                                <div class="form-group {% if form_errors(form.username) %}has-error{% endif %}">
                                    <label>N° Tel <span class="text-danger">*</span></label>
                                    {{ form_row(form.username, {
                                        "attr" : {
                                            'class' : 'form-control p-md b-r-md'
                                        },
                                        'label' : false
                                    }) }}
                                </div>
                                    <div class="form-group">
                                        <label>Email <span class="text-danger">*</span></label>
                                        {{ form_row(form.email, {
                                            "attr" : {
                                                'class' : 'form-control p-md b-r-md'
                                            },
                                            'label' : false
                                        }) }}
                                    </div>
                                    <div class="form-group">
                                        <label>Mot de passe <span class="text-danger">*</span></label>
                                        {{ form_row(form.plainPassword.first, {
                                            "attr" : {
                                                'class' : 'form-control p-md b-r-md'
                                            },
                                            'label' : false
                                        }) }}
                                    </div>
                                    <div class="form-group">
                                        <label>Confirmer le mot de passe <span class="text-danger">*</span></label>
                                        {{ form_row(form.plainPassword.second, {
                                            "attr" : {
                                                'class' : 'form-control p-lg b-r-md'
                                            },
                                            'label' : false
                                        }) }}
                                    </div>

                                    <div>
                                       {# <button type="submit" class="btn">Valider</button>#}
                                        <button class="btn btn-primary btn-block" type="submit">
                                            <strong class="text-gray-dark">Valider</strong>
                                        </button>
                                        {#<label> <input type="checkbox" class="i-checks"> Remember me </label>#}
                                    </div>
                                {{ form_end(form) }}
                            </div>
                            <div class="col-sm-4">
                                <p class="text-warning text-center">Un compte normal ne bénéficie d'aucun accès à l'administration</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}


