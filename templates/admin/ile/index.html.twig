{% extends 'admin/base.html.twig' %}

{% block title %}Iles {{ parent() }}{% endblock %}

{% block body %}


    <div class="row">
        {# Messages Flash #}
        {% for message in app.flashes('success') %}
            <div class="col-lg-12">
                <div class="alert alert-success alert-dismissable ">
                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                    {{ message }}
                </div>
            </div>
        {% endfor %}


        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Îles  </h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            {% if is_granted('ROLE_SUPERADMIN') %}
                            <li>
                                <a href="{{ path('admin_ile_new') }}">Ajouter</a>
                            </li>
                            {% endif %}
                        </ul>
                        {#
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                        #}
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Îles</th>
                            <th>Nbr clubs</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for ile in iles %}
                            <tr>
                                <td>{{ ile.id }}</td>
                                <td>{{ ile.designation }}</td>
                                <td>1</td>
                                <td>
                                    <a href="{{ path('admin_ile_show', {'id': ile.id}) }}" class="btn btn-xs btn-primary">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_ile_edit', {'id': ile.id}) }}" class="btn btn-xs btn-warning">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3">Aucun enregitrement!</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
