<form method="post" action="{{ path('admin_infoflash_delete', {'id': infoflash.id}) }}"
      onsubmit="return confirm('Action irreversible, continuer?');" style="display: inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ infoflash.id) }}">
    <button class="btn btn btn-danger btn-xs"><i class="fa fa-trash"></i></button>
</form>
