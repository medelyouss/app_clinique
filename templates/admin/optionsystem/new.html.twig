{% extends 'admin/base.html.twig' %}

{% block title %}Option system{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1>Option Système</h1>
                </div>

                <div class="panel-body">
                    {{ form_start(form) }}
                    <div class="form-group col-sm-12 {% if form_errors(form.copyright) %}has-error{% endif %}">
                        <label>Copyright <span class="text-danger">*</span></label>
                        {{ form_widget(form.copyright, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : "Copyright"
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.copyright) }}</small>
                        </div>
                    </div>

                    <div class="form-group col-sm-6 {% if form_errors(form.facebook) %}has-error{% endif %}">
                        <label>Facebook<span class="text-muted">*</span></label>
                        {{ form_widget(form.facebook, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : "Facebook"
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.facebook) }}</small>
                        </div>
                    </div>

                    <div class="form-group col-sm-6 {% if form_errors(form.twitter) %}has-error{% endif %}">
                        <label>Twitter<span class="text-muted">*</span></label>
                        {{ form_widget(form.twitter, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : "twitter"
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.twitter) }}</small>
                        </div>
                    </div>

                    <div class="form-group col-sm-6 {% if form_errors(form.instagram) %}has-error{% endif %}">
                        <label>Instagram <span class="text-muted">*</span></label>
                        {{ form_widget(form.instagram, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : 'Instagram'
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.instagram) }}</small>
                        </div>
                    </div>
                    <div class="form-group col-sm-6 {% if form_errors(form.youtube) %}has-error{% endif %}">
                        <label>Youtube <span class="text-muted">*</span></label>
                        {{ form_widget(form.youtube, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : 'Youtube'
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.youtube) }}</small>
                        </div>
                    </div>

                    <div class="form-group col-sm-4 {% if form_errors(form.urlsiteweb) %}has-error{% endif %}">
                        <label>URL site web <span class="text-muted">*</span></label>
                        {{ form_widget(form.urlsiteweb, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : 'url site web'
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.urlsiteweb) }}</small>
                        </div>
                    </div>

                    <div class="form-group col-sm-4 {% if form_errors(form.tel) %}has-error{% endif %}">
                        <label>N° Tel <span class="text-muted">*</span></label>
                        {{ form_widget(form.tel, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : 'N° Tel'
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.tel) }}</small>
                        </div>
                    </div>

                    <div class="form-group col-sm-4 {% if form_errors(form.email) %}has-error{% endif %}">
                        <label>Email <span class="text-muted">*</span></label>
                        {{ form_widget(form.email, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : 'Email'
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.email) }}</small>
                        </div>
                    </div>
                    {#========================================================================#}
                    <div class="form-group col-sm-4 {% if form_errors(form.imgMainlogoFile) %}has-error{% endif %}">
                        <label>Logo principal <span class="text-muted">*</span></label>
                        {{ form_widget(form.imgMainlogoFile, {
                            'attr' : {
                                'class' : 'form-control',
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.imgMainlogoFile) }}</small>
                        </div>
                    </div>
                    <div class="form-group col-sm-4 {% if form_errors(form.imgMainlogomobileFile) %}has-error{% endif %}">
                        <label>Logo principal mobile <span class="text-muted">*</span></label>
                        {{ form_widget(form.imgMainlogomobileFile, {
                            'attr' : {
                                'class' : 'form-control',
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.imgMainlogomobileFile) }}</small>
                        </div>
                    </div>
                    <div class="form-group col-sm-4 {% if form_errors(form.imgNoimageFile) %}has-error{% endif %}">
                        <label>Quand il n'y a pas d'image <span class="text-muted">*</span></label>
                        {{ form_widget(form.imgNoimageFile, {
                            'attr' : {
                                'class' : 'form-control',
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.imgNoimageFile) }}</small>
                        </div>
                    </div>
                    {#========================================================================#}
                    <div class="form-group col-sm-12 {% if form_errors(form.adresse) %}has-error{% endif %}">
                        <label>Adresse <span class="text-muted">*</span></label>
                        {{ form_widget(form.adresse, {
                            'attr' : {
                                'class' : 'form-control'
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.adresse) }}</small>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-info waves-effect waves-light">Enregistrer</button>
                        <a href="{{ path("admin_optionsystem_index") }}" type="button"
                           class="btn btn-default waves-effect waves-light pull-right">Annuler</a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
