{% extends 'admin/base.html.twig' %}

{% block title %}Modifier Club {{ parent() }}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1>Modifier {{ club.designation }}</h1>
                </div>

                <div class="panel-body">
                    {{ form_start(form) }}
                    <div class="form-group col-sm-6 {% if form_errors(form.designation) %}has-error{% endif %}">
                        <label>Désignation <span class="text-danger">*</span></label>
                        {{ form_widget(form.designation, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : "Désignation"
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.designation) }}</small>
                        </div>
                    </div>

                    <div class="form-group col-sm-3 {% if form_errors(form.codeClub) %}has-error{% endif %}">
                        <label>Code club <span class="text-danger">*</span></label>
                        {{ form_widget(form.codeClub, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : "Code club"
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.codeClub) }}</small>
                        </div>
                    </div>

                    <div class="form-group col-sm-3 {% if form_errors(form.numtel) %}has-error{% endif %}">
                        <label>N° Tel <span class="text-danger">*</span></label>
                        {{ form_widget(form.numtel, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : "N° Tel"
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.numtel) }}</small>
                        </div>
                    </div>

                    <div class="form-group col-sm-4 {% if form_errors(form.ile) %}has-error{% endif %}">
                        <label>Île <span class="text-muted">*</span></label>
                        {{ form_widget(form.ile, {
                            'attr' : {
                                'class' : 'form-control'
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.ile) }}</small>
                        </div>
                    </div>
                    <div class="form-group col-sm-4 {% if form_errors(form.discipline) %}has-error{% endif %}">
                        <label>Discipline <span class="text-danger">*</span></label>
                        {{ form_widget(form.discipline, {
                            'attr' : {
                                'class' : 'form-control'
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.discipline) }}</small>
                        </div>
                    </div>

                    <div class="form-group col-sm-4 {% if form_errors(form.responsable) %}has-error{% endif %}">
                        <label>Responsable <span class="text-muted">*</span></label>
                        {{ form_widget(form.responsable, {
                            'attr' : {
                                'class' : 'form-control'
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.responsable) }}</small>
                        </div>
                    </div>

                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-info waves-effect waves-light">Enregistrer</button>
                        <a href="{{ path("admin_club_index") }}" type="button"
                           class="btn btn-default waves-effect waves-light pull-right">Annuler</a>
                    </div>
                    {{ form_end(form) }}

                    <div class="col-md-12">
                        <a href="{{ path('admin_club_index') }}" class="btn btn-xs btn-primary m-t-lg"><< Retour</a>

                        <span class="pull-right m-t-lg">
                            {{ include('admin/club/_delete_form.html.twig') }}
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
