{% extends 'admin/base.html.twig' %}

{% block title %}Actu sport {{ parent() }}{% endblock %}

{% block body %}
    <h1>
        Actu sport

        <span class="pull-right"><a href="{{ path('admin_actusportimage_index', {'actusport_id' : actusport.id}) }}" class="btn btn-xs btn-primary">Voir toutes les images</a></span>
    </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actusport.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ actusport.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ actusport.content | raw }}</td>
            </tr>
            <tr>
                <th>A l'accueil aussi ?</th>
                <td>{{ actusport.isForhome ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_actusport_index') }}" class="btn btn-xs btn-primary"><< Retour</a>

    <a href="{{ path('admin_actusport_edit', {'id': actusport.id}) }}" class="btn btn-xs btn-warning">Modifier</a>

    <span class="pull-right"> {{ include('admin/actusport/_delete_form.html.twig') }}</span>
{% endblock %}
