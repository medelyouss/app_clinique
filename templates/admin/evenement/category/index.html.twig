{% extends 'admin/base.html.twig' %}

{% block title %}Catégorie {{ parent() }}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            {# Messages Flash #}
            {% for message in app.flashes('success') %}
                <div class="col-lg-12">
                    <div class="alert alert-success alert-dismissable ">
                        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                        {{ message }}
                    </div>
                </div>
            {% endfor %}

            <a href="{{ path('admin_evenement_index') }}" class="btn btn-xs btn-primary">
                <i class="fa fa-angle-double-left"></i>  Retour aux évènements
            </a>
            <span class="pull-right">
            <a href="{{ path('admin_evenementcategory_new') }}" class="btn btn-xs btn-primary">
                <i class="fa fa-plus"></i> Ajouter une catégorie
            </a>
            </span>
            <table class="table">
                <thead>
                <tr>
                    <th colspan="3">
                    <h2>Catégorie</h2>
                    </th>
                </tr>
                <tr>
                    <th>#</th>
                    <th>Designation</th>
                    <th>#</th>
                </tr>
                </thead>
                <tbody>
                {% for evenement_category in evenement_categorys %}
                    <tr>
                        <td>{{ evenement_category.id }}</td>
                        <td>{{ evenement_category.designation }}</td>
                        <td>
                            <a href="{{ path('admin_evenementcategory_edit', {'id': evenement_category.id}) }}" class="btn btn-xs btn-warning">
                                <i class="fa fa-edit"></i> Modifier</a>
                            {{ include('admin/evenement/category/_delete_form.html.twig') }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucun enregistrment!</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>


        </div>
    </div>
{% endblock %}
