{% extends 'admin/base.html.twig' %}

{% block title %}Modifier Vidéo {{ parent() }}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1>Modifier {{ evenement_video .designation }}</h1>
                </div>

                <div class="panel-body">
                    {{ form_start(form) }}
                    <div class="form-group col-sm-6 {% if form_errors(form.designation) %}has-error{% endif %}">
                        <label>Désignation <span class="text-danger">*</span></label>
                        {{ form_widget(form.designation, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : "Désignation"
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.designation) }}</small>
                        </div>
                    </div>

                    <div class="form-group col-sm-6 {% if form_errors(form.urlVideo) %}has-error{% endif %}">
                        <label>URL vidéo <span class="text-danger">*</span></label>
                        {{ form_widget(form.urlVideo, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : "URL Vidéo"
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.urlVideo) }}</small>
                        </div>
                    </div>



                    <div class="form-group col-sm-6 {% if form_errors(form.evenement) %}has-error{% endif %}">
                        <label>Evènement concerné <span class="text-muted">*</span></label>
                        {{ form_widget(form.evenement, {
                            'attr' : {
                                disabled : ''
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.evenement) }}</small>
                        </div>
                    </div>

                    <div class="form-group col-sm-3 {% if form_errors(form.creditVideo) %}has-error{% endif %}">
                        <label>Crédit Vidéo <span class="text-muted">*</span></label>
                        {{ form_widget(form.creditVideo, {
                            'attr' : {
                                'class' : 'form-control',
                                'placeholder' : "Crédit Vidéo"
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.creditVideo) }}</small>
                        </div>
                    </div>

                    <div class="form-group col-sm-3 {% if form_errors(form.dateAt) %}has-error{% endif %}">
                        <label>Date <span class="text-danger">*</span></label>
                        {{ form_widget(form.dateAt, {
                            'attr' : {
                                'class' : 'form-control'
                            }
                        }) }}
                        <div class="form-error">
                            <small class="text-danger">{{ form_errors(form.dateAt) }}</small>
                        </div>
                    </div>


                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-info waves-effect waves-light">Enregistrer</button>
                        <a href="{{ path("admin_club_index") }}" type="button"
                           class="btn btn-default waves-effect waves-light pull-right">Annuler</a>
                    </div>
                    {{ form_end(form) }}

                    <div class="col-md-12">
                        {% if evenement_id != null %}
                        <a href="{{ path('admin_evenementvideo_index', {'evenement_id' : evenement_id}) }}" class="btn btn-xs btn-primary m-t-lg"><< Retour aux vidéos</a>
                        {% else %}
                        <a href="{{ path('admin_evenementvideo_index') }}" class="btn btn-xs btn-primary m-t-lg"><< Retour aux vidéos</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
