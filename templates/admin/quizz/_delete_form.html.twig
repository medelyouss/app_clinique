<form method="post" action="{{ path('admin_quizz_delete', {'id': quizz.id}) }}"
      onsubmit="return confirm('Action irreversible, continuer?');" style="display: inline;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quizz.id) }}">
    <button class="btn btn-xs btn-danger btn-circle"><i class="fa fa-trash"></i></button>
</form>
