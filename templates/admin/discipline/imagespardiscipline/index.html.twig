{% extends 'admin/base.html.twig' %}

{% block title %}Disciplines {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        {# Messages Flash #}
        {% for message in app.flashes('success') %}
            <div class="col-lg-12">
                <div class="alert alert-success alert-dismissable ">
                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
                    {{ message }}
                </div>
            </div>
        {% endfor %}

        <h1>Disciplines</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Designation</th>
                    <th>Nbr Img</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for discipline in disciplines %}
                <tr>
                    <td>{{ discipline.id }}</td>
                    <td>{{ discipline.designation }}</td>
                    <td>
                        {{ discipline.getDisciplineactusportImages() | length }}
                        {% if discipline.getDisciplineactusportImages() | length > 0 %}
                        <a href="{{ path('admin_disciplineactusport_show', {'id': discipline.id}) }}"
                           class="btn btn-xs btn-primary btn-circle btn-outline"><i class="fa fa-eye"></i>
                        </a>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('admin_disciplineactusport_edit', {'id': discipline.id}) }}" class="btn btn-xs btn-warning">
                            <i class="fa fa-plus"></i><i class="fa fa-image"></i> Ajouter des images</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun enregistrement</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
