{% extends 'admin/base.html.twig' %}

{% block title %}Disciplines {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            {# Messages Flash #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissable ">
                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">Ã—</button>
                    {{ message }}
                </div>
            {% endfor %}

            <h1>Disciplines</h1>
            <span class="pull-right">
                <a href="{{ path('admin_discipline_new') }}" class="btn btn-primary btn-xs"><i class="fa fa-plus"></i> Ajouter</a>
            </span>
            <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Designation</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for discipline in disciplines %}
                <tr>
                    <td>{{ discipline.id }}</td>
                    <td>{{ discipline.designation }}</td>
                    <td>
                        <a href="{{ path('admin_discipline_show', {'id': discipline.id}) }}" class="btn btn-xs btn-primary"><i class="fa fa-eye"></i> Voir</a>
                        <a href="{{ path('admin_discipline_edit', {'id': discipline.id}) }}" class="btn btn-xs btn-warning"><i class="fa fa-pencil"></i> Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun enregistrement</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
    </div>

{% endblock %}
