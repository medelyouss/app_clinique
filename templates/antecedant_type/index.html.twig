{% extends 'base.html.twig' %}

{% block title %}Antecedant Type {{ parent() }}{% endblock %}

{% block body %}

    <div class="row">
        {% for message in app.flashes('success') %}
            <div class="col-lg-12">
                <div class="alert alert-success alert-dismissable ">
                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                    {{ message }}
                </div>
            </div>
        {% endfor %}

        <div class="col-lg-12">
            <h1>Antecedant Type</h1>

            <div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <a href="{{ path('app_antecedanttype_new') }}" class="btn btn-sm btn-white">
            <i class="fa fa-plus"></i> Ajouter un type d'antécédant
        </a>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for antecedant_type in antecedant_types %}
            <tr>
                <td>{{ antecedant_type.id }}</td>
                <td>{{ antecedant_type.designation }}</td>
                <td>
                    <a href="{{ path('app_antecedanttype_edit', {'id': antecedant_type.id}) }}" class="btn btn-circle btn-outline btn-warning">
                        <i class="fa fa-pencil"></i>
                    </a>

                    {% if is_granted('ROLE_SUPERADMIN') %}
                        {{ include('antecedant_type/_delete_form.html.twig') }}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
        </div>
    </div>
{% endblock %}
